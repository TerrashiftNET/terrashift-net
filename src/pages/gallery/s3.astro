---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import GalleyLinks from "../../components/Gallery-Links.astro";

const images = await Astro.glob("../../assets/gallery/s3/*.png").then(
  (files) => {
    return files.map((file) => file.default);
  }
);
---

<Layout title="Terrashift | S3 Gallery">
  <Header />
  <div id="container">
    <h1>S3 Gallery</h1>
    <GalleyLinks />
    <div id="gallery">
      {
        images.map((image) => (
          <Image src={image} alt="Gallery Image" loading="lazy" />
        ))
      }
    </div>
  </div>
</Layout>

<style>
  #container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  #gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    margin: 20px 100px 20px 100px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: pointer;
    transition: all 0.5s;
  }
  img:hover:not(.big) {
    transform: scale(1.1);
  }

  img.big {
    width: auto;
    height: 80%;
    object-fit: contain;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 2;
    background-color: rgba(0, 0, 0, 0.8);
    transition: all 0.5s;
  }
</style>

<script>
  document.querySelectorAll("img").forEach((img) => {
    img.addEventListener("click", () => {
      img.classList.toggle("big");
    });
  });
</script>
